---
interface Props {
  name: string;
  description: string;
  date: string;
  active: boolean;
  link: string;
  background?: string;
}

const { name, description, date, active, link, background } = Astro.props;
const backgroundUrl = background ? `url(/projects/${background}.png)` : "";
---

<a class="project" href={link} style={`--bg-img: ${backgroundUrl}`}>
    <h2>{name}</h2>
    <p>{description}</p>
    
    <div class="footer">
        <p style={`color:${active ? "#00f619" : "#ff4444"}; background-color:${active ? "#2c462f" : "#5c2424"}`}>
            {active ? "â€¢ ACTIVE" : "x DEAD"}
        </p>
